@model ViewModelLayer.Home.AnbarFacility
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ContractLayout.cshtml";
}

<link href="~/lib/multiselect/multiselect.css" rel="stylesheet" />
<script src="~/lib/multiselect/multiselect.js"></script>

<div class="text-center" style="background:rgba(202, 199, 199, 0.50)">
    <h2 class="text-center" style="padding-top:60px;padding-bottom:40px;">ثبت ملک جدید</h2>
</div>

<div class="container" style="margin-top:50px;">
    <div class="box box-danger">
        <div class="box-header">

        </div>
        <form asp-action="CreateAnbarFacility" asp-controller="CreateHomeType" method="post">

            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger row"></div>

                <input name="HomeId" id="HomeId" type="number" style="display:none" value="@ViewData["Id"]">
                <input name="userid" id="userid" type="number" style="display:none" value="@Model.Adviser.Id">
                <div class="form-group" style="display:none;">
                    <div class="row">
                        <div class="col-lg-6">
                            <h6>متراژ بنا</h6>
                            <input asp-for="Anbar.MetrazhBena" type="number" min="0" class="form-control" placeholder="متراژ بنا" value="1">
                            <span asp-validation-for="Anbar.MetrazhBena" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <h6>متراژ زمین</h6>
                            <input asp-for="Anbar.Metrazhzamin" type="number" min="0" class="form-control" placeholder="متراژ زمین" value="1">
                            <span asp-validation-for="Anbar.Metrazhzamin" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-6">
                            <h6>نام نگهبان</h6>
                            <input asp-for="Anbar.NegahbaniName" type="text" class="form-control" placeholder="نام نگهبان">
                            <span asp-validation-for="Anbar.NegahbaniName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <h6>شماره نگهبان</h6>
                            <input asp-for="Anbar.NegahbaniPhone" type="number" class="form-control" placeholder="شماره نگهبان">
                            <span asp-validation-for="Anbar.NegahbaniPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <hr />


                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-6">
                            <h6>امتیاز : </h6>
                            <select class="selectpicker" multiple="multiple" data-placeholder="انتخاب امتیازات  "
                                    style="width: 100%;direction:rtl;float:right;" name="emtiaz" id="emtiaz">
                                @for (var i = 0; i < Model.AmlakEmtiazes.Count; i++)
                                {
                                    <option value="@Model.AmlakEmtiazes[i].Name">@Model.AmlakEmtiazes[i].Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-lg-6">

                        </div>
                    </div>
                </div>


                <hr />

                <div class="form-group">
                    <button type="submit" class="btn btn-success">درج اطلاعات انبار - رفتن به مرحله بعد </button>
                </div>

            </div>
        </form>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <!-- /.box -->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}