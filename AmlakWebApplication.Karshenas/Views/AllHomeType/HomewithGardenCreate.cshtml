@model ViewModelLayer.Home.HomeWithGardenFacility
@{
    ViewData["Title"] = "CreateFacility";
    Layout = "~/Views/Shared/_ContractLayout.cshtml";
}

<link href="~/lib/multiselect/multiselect.css" rel="stylesheet" />
<script src="~/lib/multiselect/multiselect.js"></script>

<div class="text-center" style="background:rgba(202, 199, 199, 0.50)">
    <h2 class="text-center" style="padding-top:60px;padding-bottom:40px;">ثبت ملک جدید</h2>
</div>


<div class="container" style="margin-top:50px;">
    <div class="box box-danger">
        <div class="box-header">
        </div>
        <form asp-action="CreateHomewithgardenFacility" asp-controller="CreateHomeType" method="post">

            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger row"></div>

                <input name="HOmeId" id="HomeId" type="number" style="display:none" value="@ViewData["Id"]">
                <input name="userid" id="userid" type="number" style="display:none" value="@Model.Adviser.Id">

                <div class="form-group">
                    <div class="row">

                        <div class="col-lg-2">
                            <h6>تعداد کل طبقات</h6>
                            <input asp-for="HomewithGarden.Tedadkoltabaghat" type="number" class="form-control" min="0" placeholder="تعداد کل طبقات">
                            <span asp-validation-for="HomewithGarden.Tedadkoltabaghat" class="text-danger"></span>
                        </div>
                        <div class="col-lg-2">
                            <h6>عرض گذر</h6>
                            <input asp-for="HomewithGarden.Arzegozar" type="text" class="form-control" min="0" placeholder="عرض گذر">
                            <span asp-validation-for="HomewithGarden.Arzegozar" class="text-danger"></span>
                        </div>
                        <div class="col-lg-2">
                            <h6>عرض ملک</h6>
                            <input asp-for="HomewithGarden.Arzemelk" type="number" class="form-control" min="0" placeholder="عرض ملک">
                            <span asp-validation-for="HomewithGarden.Arzemelk" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">
                        <div class="">
                            <h6> موقعیت ملک :</h6>
                            <div class="" style="">
                                <select class="selectpicker" style="padding:10px;width:90%;" asp-for="HomewithGarden.Homemogheiat" onchange="checkcityval()">
                                    @for (var i = 0; i < Model.AmlakMogheiatMelk.Count; i++)
                                    {
                                        <option value="@Model.AmlakMogheiatMelk[i].Id">@Model.AmlakMogheiatMelk[i].Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="">
                            <h6> نمای ساختمان :</h6>
                            <div class="" style="">
                                <select class="selectpicker" style="padding:10px;width:90%;" id="AmlakNema" name="AmlakNema" onchange="checkcityval()">
                                    @for (var i = 0; i < Model.AmlakNema.Count; i++)
                                    {
                                        <option value="@Model.AmlakNema[i].Id">@Model.AmlakNema[i].Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="">
                            <h6> مشخصه ملک :</h6>
                            <select class="selectpicker" multiple="multiple" data-placeholder="  انتخاب کن  "
                                    style="width: 90%;direction:rtl;float:right;">
                                @for (var i = 0; i < Model.AmlakMoshakhase.Count; i++)
                                {
                                    <option value="@Model.AmlakMoshakhase[i].Id">@Model.AmlakMoshakhase[i].Name</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>

                <hr />

                <div class="row">
                    <div class="col-lg-4">
                        <div class="">
                            <h6> تاسیسات گرمایشی و سرمایشی :</h6>
                            <div class="" style="">
                                <select class="selectpicker" multiple style="padding:10px;width:90%;" id="AmlakParking" name="AmlakParking" onchange="checkcityval()">
                                    @for (var i = 0; i < Model.AmlakTasisatGarmaieshi.Count; i++)
                                    {
                                        <option value="@Model.AmlakTasisatGarmaieshi[i].Id">@Model.AmlakTasisatGarmaieshi[i].Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="">
                            <h6> پوشش کف :</h6>
                            <div class="" style="">
                                <select class="selectpicker" style="padding:10px;width:90%;" id="AmlakParking" name="AmlakParking" onchange="checkcityval()">
                                    @for (var i = 0; i < Model.AmlakKafes.Count; i++)
                                    {
                                        <option value="@Model.AmlakKafes[i].Id">@Model.AmlakKafes[i].Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="">
                            <h6> آشپزخانه :</h6>
                            <select class="selectpicker" multiple="multiple" data-placeholder="   انتخاب کن  "
                                    style="width: 90%;direction:rtl;float:right;">
                                @for (var i = 0; i < Model.AmlakKitchenes.Count; i++)
                                {
                                    <option value="@Model.AmlakKitchenes[i].Id">@Model.AmlakKitchenes[i].Name</option>
                                }
                            </select>

                        </div>
                    </div>

                </div>

                <hr />

                <div class="row">
                    <div class="col-lg-4">
                        <div class="">
                            <h6> نوع دیوار  :</h6>
                            <div>
                                <select class="selectpicker" style="padding:10px;width:90%;" id="AmlakParking" name="AmlakParking" onchange="checkcityval()">
                                    @for (var i = 0; i < Model.AmlakDivars.Count; i++)
                                    {
                                        <option value="@Model.AmlakDivars[i].Id">@Model.AmlakDivars[i].Name</option>
                                    }
                                </select>
                            </div>

                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="">
                            <h6> نوع و تعداد پارکینگ :</h6>
                            <div class="" style="">
                                <select class="selectpicker" multiple style="padding:10px;width:90%;" id="AmlakParking" name="AmlakParking" onchange="checkcityval()">
                                    @for (var i = 0; i < Model.AmlakParking.Count; i++)
                                    {
                                        <option value="@Model.AmlakParking[i].Id">@Model.AmlakParking[i].Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="">
                            <h6> سرویس بهداشتی و حمام  :</h6>
                            <select class="selectpicker" multiple="multiple" data-placeholder="   انتخاب کن  "
                                    style="width: 90%;direction:rtl;float:right;">
                                @for (var i = 0; i < Model.AmlakWC.Count; i++)
                                {
                                    <option value="@Model.AmlakWC[i].Id">@Model.AmlakWC[i].Name</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>

                <hr />

                <div class="row">
                    <div class="col-lg-4">
                        <div class="">
                            <h6> وضعیت سند :</h6>
                            <div class="" style="">
                                <select class="selectpicker" style="padding:10px;width:90%;" id="AmlakSanadStatus" name="AmlakSanadStatus" onchange="checkcityval()">
                                    @for (var i = 0; i < Model.AmlakSanadStatus.Count; i++)
                                    {
                                        <option value="@Model.AmlakSanadStatus[i].Id">@Model.AmlakSanadStatus[i].Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="">
                            <h6> امتیاز  :</h6>
                            <select class="selectpicker" multiple="multiple" data-placeholder="   انتخاب کن  "
                                    style="width: 90%;direction:rtl;float:right;">
                                @for (var i = 0; i < Model.AmlakEmtiazes.Count; i++)
                                {
                                    <option value="@Model.AmlakEmtiazes[i].Id">@Model.AmlakEmtiazes[i].Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="">
                            <h6> وضعیت ملک :</h6>
                            <div class="" style="">
                                <select class="selectpicker" multiple="multiple" data-placeholder="  انتخاب کن  "
                                        style="width: 90%;direction:rtl;float:right;">
                                    @for (var i = 0; i < Model.AmlakMelkStatus.Count; i++)
                                    {
                                        <option value="@Model.AmlakMelkStatus[i].Id">@Model.AmlakMelkStatus[i].Name</option>
                                    }
                                </select>
                            </div>

                        </div>
                    </div>

                </div>

                <hr />

                <div class="row">
                    <div class="col-lg-4">
                        <div class="">
                            <h6> امکانات :</h6>
                            <div class="" style="">
                                <select class="selectpicker" multiple style="padding:10px;width:90%;" id="homefacility" name="homefacility">
                                    @for (var i = 0; i < Model.HomeFacility.Count; i++)
                                    {
                                        <option value="@Model.HomeFacility[i].Id">@Model.HomeFacility[i].Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>


                </div>

                <hr />

                <div class="form-group">
                    <button type="submit" class="btn btn-success">درج اطلاعات خانه حیاط دار - رفتن به مرحله بعد </button>
                </div>

            </div>
        </form>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <!-- /.box -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}