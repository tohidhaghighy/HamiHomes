        height: 40px;
        padding: 8px;
        background: rgba(60, 58, 58, 0.25);
        color: black;
        text-align: center;
        display: inline;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
    }

    #btnsms {
        padding: 10px;
        color: white;
        width: 150px;
    }

        #btnsms:hover {
            color: black;
            background-color: white;
        }

    .border-number {
        display: inline-grid;
        margin: 15px;
        margin-right: 5px;
        cursor: pointer;
        background: #c78910;
        border-radius: 20px;
        width: 40px;
        color: white;
        text-align: center
    }

    .card-signin {
