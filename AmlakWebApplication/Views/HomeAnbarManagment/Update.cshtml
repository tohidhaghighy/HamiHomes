@model ViewModelLayer.Home.AnbarFacility
@{
    ViewData["Title"] = "CreateFacility";
    Layout = "~/Views/Shared/_Managment.cshtml";
}


<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: #af1e1e;
        color: white;
        direction: rtl;
    }

    span {
        direction: rtl;
    }
</style>

<section class="content-header">
    <h1>
        داشبورد
        <small>کنترل پنل</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/HomeManagment/Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">انبار جدید </li>
    </ol>
</section>

<div class="callout callout-info" style="margin-top:10px;">
    <h4>ویرایش اطلاعات انبار</h4>
    در اینجا میتوانید مرحله دوم ویرایش اطلاعات انبار را وارد کنید
    و اطلاعات انبار را وارد کنید

</div>

<div class="container">
    <div class="box box-danger">
        <div class="box-header">
            <h3 class="box-title">ویرایش اطلاعات انبار</h3>
        </div>
        <form asp-action="UpdateItem">

            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger row"></div>

                <input name="HomeId" id="HomeId" type="number" class="hidden" value="@ViewData["Id"]">
                <input name="Id" id="Id" type="number" class="hidden" value="@Model.Anbar.Id">

                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-6">
                            <h4>نام نگهبان</h4>
                            <input asp-for="Anbar.NegahbaniName" type="text" class="form-control" placeholder="نام نگهبان">
                            <span asp-validation-for="Anbar.NegahbaniName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <h4>شماره نگهبان</h4>
                            <input asp-for="Anbar.NegahbaniPhone" type="number" class="form-control" placeholder="شماره نگهبان">
                            <span asp-validation-for="Anbar.NegahbaniPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <hr />


                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-6">
                            <h4>امتیاز : </h4>
                            <select class="form-control select2 text-center" multiple="multiple" data-placeholder="انتخاب امتیازات  "
                                    style="width: 100%;direction:rtl;float:right;" name="emtiaz" id="emtiaz">
                                @for (var i = 0; i < Model.AmlakEmtiazes.Count; i++)
                                {
                                    if (Model.Anbar.HomeEmtiaz.Contains(Model.AmlakEmtiazes[i].Name))
                                    {
                                        <option value="@Model.AmlakEmtiazes[i].Name" selected="selected">@Model.AmlakEmtiazes[i].Name</option>
                                    }
                                    else
                                    {
                                        <option value="@Model.AmlakEmtiazes[i].Name">@Model.AmlakEmtiazes[i].Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-lg-6">

                        </div>
                    </div>
                </div>


                <hr />

                <div class="form-group">
                    <button type="submit" class="btn btn-success">درج اطلاعات انبار - رفتن به مرحله بعد </button>
                </div>

            </div>
        </form>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <!-- /.box -->
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}