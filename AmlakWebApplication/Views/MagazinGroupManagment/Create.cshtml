@model DomainLayer.Magzine.MagazinGroup
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Managment.cshtml";
}


<section class="content-header">
    <h1>
        داشبرد
        <small>کنترل پنل</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/MagazineManagment/Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مدیریت دسته بندی مجلات </li>
    </ol>
</section>

<div class="callout callout-info" style="margin-top:10px;">
    <h4>مدریت مجلات</h4>
    در این قسمت مجلات حامی هوم را میتوانید دسته بندی جدیدی را وارد کنید
</div>

<div class="container">
    <div class="box box-danger">
        <div class="box-header">
            <h3 class="box-title">منو جدید</h3>
        </div>
        <form asp-action="CreateItem">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger row"></div>
                <input asp-for="ParentId" type="number" style="display:none;" value="@ViewData["Id"]">
                <div class="form-group">
                    <label>نام</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="نام">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">درج دسته بندی جدید</button>
                </div>

            </div>
        </form>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <!-- /.box -->
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


