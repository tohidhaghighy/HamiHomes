@model ViewModelLayer.AdvisorManagment.MainAdvisor
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Managment.cshtml";
}
<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: #af1e1e;
        color: white;
        direction: rtl;
    }

    span {
        direction: rtl;
    }
</style>
<section class="content-header">
    <h1>
        داشبورد
        <small>کنترل پنل</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/AdvisorManagment/Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مشاور جدید </li>
    </ol>
</section>

<div class="callout callout-info" style="margin-top:10px;">
    <h4>درج مشاور جدید</h4>

</div>

<div class="container">
    <div class="box box-danger">
        <div class="box-header">
            <h3 class="box-title">مشاور جدید</h3>
        </div>
        <form asp-action="CreateItem" enctype="multipart/form-data">

            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger row"></div>

                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>نام</label>
                            <input asp-for="Adviser.Name" type="text" class="form-control" placeholder="نام">
                            <span asp-validation-for="Adviser.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>نام خانوادگی</label>
                            <input asp-for="Adviser.Family" type="text" class="form-control" placeholder="نام خانوادگی">
                            <span asp-validation-for="Adviser.Family" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>موبایل</label>
                            <input asp-for="Adviser.Mobile" type="number" class="form-control" placeholder="موبایل">
                            <span asp-validation-for="Adviser.Mobile" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>چند سال سابقه</label>
                            <input asp-for="Adviser.ExperienceYear" type="number" class="form-control" placeholder="چند سال سابقه">
                            <span asp-validation-for="Adviser.ExperienceYear" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>ایمیل</label>
                            <input asp-for="Adviser.Email" type="email" class="form-control" placeholder="ایمیل">
                            <span asp-validation-for="Adviser.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">

                    </div>
                </div>


                <div class="form-group">
                    <label>توضیحات</label>
                    <textarea asp-for="Adviser.Description" type="text" class="form-control" rows="6" placeholder="توضیحات"></textarea>
                    <span asp-validation-for="Adviser.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>تخصص در فروش</label>
                    <textarea asp-for="Adviser.BuyTakhasos" type="text" class="form-control" rows="2" placeholder="تخصص در فروش"></textarea>
                    <span asp-validation-for="Adviser.BuyTakhasos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>تخصص در اجاره</label>
                    <textarea asp-for="Adviser.RentTakhasos" type="text" class="form-control" rows="2" placeholder="تخصص در اجاره"></textarea>
                    <span asp-validation-for="Adviser.RentTakhasos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-6">
                            <h4> استان : </h4>
                            <select class="form-control select2 text-center" data-placeholder="استان  "
                                    style="width: 100%;direction:rtl;float:right;">
                                <option value=""> انتخاب استان :</option>
                                @{
                                    foreach (var item in Model.Regions)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }

                            </select>
                        </div>
                        <div class="col-lg-6">

                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-6">
                            <h4> شهر : </h4>
                            <select asp-for="Adviser.CityId" class="form-control select2 text-center" data-placeholder="انتخاب شهر  "
                                    style="width: 100%;direction:rtl;float:right;" name="city">
                                <option value=""> انتخاب شهر :</option>
                                @{
                                    foreach (var item in Model.Cities)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }

                            </select>
                        </div>
                        <div class="col-lg-6">

                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-6">
                            <h4> مناطق : </h4>
                            <select class="form-control select2 text-center" multiple="multiple" data-placeholder="انتخاب مناطق  "
                                    style="width: 100%;direction:rtl;float:right;" name="mahale" id="mahale">
                                <option value=""> انتخاب مناطق :</option>
                                @{
                                    foreach (var item in Model.Mahalles)
                                    {
                                        <option value="@item.Name">@item.Name</option>
                                    }
                                }

                            </select>
                        </div>
                        <div class="col-lg-6">

                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>نام کاربری </label>
                            <input asp-for="Adviser.Username" type="text" class="form-control" placeholder="نام کاربری">
                            <span asp-validation-for="Adviser.Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>پسورد</label>
                            <input asp-for="Adviser.Password" type="password" class="form-control" placeholder="پسورد">
                            <span asp-validation-for="Adviser.Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    <label>عکس کارشناس</label>
                    <input name="Image" id="Image" type="file" placeholder="عکس کارشناس">
                </div>

                <div class="form-group">
                    <label>عکس پس زمینه کارشناس</label>
                    <input name="BackgroundImage" id="BackgroundImage" type="file" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">درج مشاور جدید</button>
                </div>

            </div>
        </form>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <!-- /.box -->
</div>

<script>

</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

