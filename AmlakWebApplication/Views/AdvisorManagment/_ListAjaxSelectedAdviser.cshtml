@model List<ViewModelLayer.Adviser.AdviserInfo>
@{
    if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
    <tr>
        <td class="text-center" style="padding:30px;">
            @{
                if (item.Adviser.Image != null)
                {
                    <a href="@item.Adviser.Image"><img style="width:40px;height:40px;" src="@item.Adviser.Image" /></a>
                }
                else
                {
                    <a href="~/images/def.jpg"><img style="width:40px;height:40px;" src="~/images/def.jpg" /></a>
                }
            }
        </td>
        <td class="text-center" style="padding:30px;">@item.Adviser.Name  @item.Adviser.Family</td>
        <td class="text-center" style="padding:30px;">
            @item.Adviser.ExperienceYear
        </td>
        <td class="text-center" style="padding:30px;">
            فروش :@item.Adviser.BuyTakhasos   <br />
            اجاره : @item.Adviser.RentTakhasos
        </td>
        <td class="text-center" style="padding:30px;">
            @item.Adviser.Manategh
        </td>
        <td class="text-center" style="padding:30px;">
            @item.BuyCount
        </td>
        <td class="text-center" style="padding:30px;">
            @item.RentCount
        </td>
        <td class="text-center" style="padding:30px;">
            @item.SellCount
        </td>
        <td class="text-center" style="padding:30px;">
            @item.RentedCount
        </td>
        <td class="text-center" style="padding:30px;">
            @item.Adviser.Mobile
        </td>
        <td class="text-center" style="padding:30px;"><p data-placement="top" data-toggle="tooltip" title="انتخاب شده"><a class="btn btn-success btn-xs" onclick="selectitem(@item.Adviser.Id)">انتخاب</a></p></td>
    </tr>
        }

    }

}


