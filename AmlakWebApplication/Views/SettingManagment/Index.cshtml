@model DomainLayer.Setting
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Managment.cshtml";
}

<section class="content-header">
    <h1>
        داشبرد
        <small>کنترل پنل</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/SettingManagment/Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مدیریت تنظیمات </li>
    </ol>
</section>

<div class="callout callout-info" style="margin-top:10px;">
    <h4>مدریت تنظیمات</h4>
    این قسمت برای بهتر شدن سیو سایت تعبیه شده است و میتوانید در اینجا لینک شبکه های اجتماعی و  .. .
    را وارد کنید
</div>

<div class="container">
    <form asp-action="Update">
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">تنظیمات</h3>
            </div>
            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger row"></div>
                <input asp-for="Id" type="number" class="form-control" style="display:none;">
                <div class="form-group">
                    <label>عنوان</label>
                    <input asp-for="Title" type="text" class="form-control" placeholder="عنوان">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>توضیحات</label>
                    <input asp-for="Description" type="text" class="form-control" placeholder="توضیحات">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>کلمات کلیدی</label>
                    <input asp-for="Keys" type="text" class="form-control" placeholder="کلمات کلیدی">
                    <span asp-validation-for="Keys" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>نویسنده</label>
                    <input asp-for="Author" type="text" class="form-control" placeholder="نویسنده">
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>


            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">شبکه های اجتماعی</h3>
            </div>
            <div class="box-body">
                <!-- Color Picker -->
                <div class="form-group">
                    <label>اینیستاگرام</label>
                    <input asp-for="Instagram" type="text" class="form-control" placeholder="اینیستاگرام">
                    <span asp-validation-for="Instagram" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>توییتر</label>
                    <input asp-for="Twitter" type="text" class="form-control" placeholder="توییتر">
                    <span asp-validation-for="Twitter" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>تلگرام</label>
                    <input asp-for="Telegram" type="text" class="form-control" placeholder="تلگرام">
                    <span asp-validation-for="Telegram" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>گوگل +</label>
                    <input asp-for="Googleplus" type="text" class="form-control" placeholder="گوگل پلاس">
                    <span asp-validation-for="Googleplus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>اپارات</label>
                    <input asp-for="Aparat" type="text" class="form-control" placeholder="اپارات">
                    <span asp-validation-for="Aparat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Youtube</label>
                    <input asp-for="Youtube" type="text" class="form-control" placeholder="یوتیوب">
                    <span asp-validation-for="Youtube" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">ویرایش</button>
                </div>

            </div>
            <!-- /.box-body -->
        </div>

    </form>
    <!-- /.box -->
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}