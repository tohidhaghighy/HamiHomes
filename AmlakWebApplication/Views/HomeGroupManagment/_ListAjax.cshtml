@model List<DomainLayer.HomeGroup>
@{
    if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td class="text-center" style="padding:10px;">
                    @{
                        if (item.Icon.Length==0)
                        {
                            <a href="~/images/def.jpg"><img style="width:40px;height:40px;" src="~/images/def.jpg" /></a>
                        }
                        else
                        {
                            <a href="~/images/@item.Icon"><img style="width:40px;height:40px;" src="~/images/@item.Icon" /></a>
                        }
                    }

                </td>
                <td class="text-center" style="padding:10px;">
                    @item.Name
                </td>

                <td class="text-center" style="padding:10px;"><p data-placement="top" data-toggle="tooltip" title="حذف"><a class="btn btn-danger btn-xs" onclick="deleteitem(@item.Id)"><i class="ion ion-ios-trash"></i></a></p></td>
            </tr>
        }

    }

}


