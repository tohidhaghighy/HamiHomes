@model ViewModelLayer.Facility.FacilityItems

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Managment.cshtml";
}


<section class="content-header">
    <h1>
        داشبورد
        <small>کنترل پنل</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/HomeFacilityManagment/Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">امکانات جدید </li>
    </ol>
</section>

<div class="callout callout-info" style="margin-top:10px;">
    <h4>درج امکانات جدید</h4>

</div>

<div class="container">
    <div class="box box-danger">
        <div class="box-header">
            <h3 class="box-title">امکانات جدید</h3>
        </div>
        <form asp-action="CreateItem" enctype="multipart/form-data">

            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger row"></div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label>نام</label>
                            <input asp-for="HomeFacility.Name" type="text" class="form-control" placeholder="نام">
                            <span asp-validation-for="HomeFacility.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label>عکس</label>
                            <input name="Icon" id="Icon" type="file" class="form-control" placeholder="عکس">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label> نوع ملک </label>
                            <select name="MelkTypeId" id="MelkTypeId" class="form-control">
                                @{
                                    foreach (var item in Model.MelkTypes)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label> نوع قرارداد </label>
                            <select name="HomeTypeId" id="HomeTypeId" class="form-control">
                                @{
                                    foreach (var item in Model.Hometypes)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>نمایش در جستجو ؟</label>
                    <input asp-for="HomeFacility.ShowinSearch" type="checkbox" placeholder="نمایش در جستجو ؟" style="padding:10px;">
                </div>





                <div class="form-group">
                    <button type="submit" class="btn btn-success">درج امکانات جدید</button>
                </div>

            </div>
        </form>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <!-- /.box -->
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


