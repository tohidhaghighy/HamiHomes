@model ViewModelLayer.Gharardad.Gharardad

<link href="~/css/alert/sweetalert.css" rel="stylesheet" />
<link rel="stylesheet" href="~/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
<script src="~/css/alert/sweetalert.js"></script>

<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: #af1e1e;
        color: white;
        direction: rtl;
    }

    span {
        direction: rtl;
    }
</style>

<section class="content-header">
    <h1>
        داشبورد
        <small>کنترل پنل</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/HomeManagment/Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مدیریت قرارداد ها </li>
    </ol>
</section>

<div class="callout callout-info" style="margin-top:10px;">
    <h4>مدریت قرارداد ها</h4>
</div>

<div class="container">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">جستجو</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">کد فایل</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="code" name="code" placeholder="کد فایل" style="width:50%;display:inline">
                        <a class="btn btn-info" onclick="searchhome()" style="">جستجو</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div id="showgharardad">

    </div>
</div>

<script>

    $(document).ready(function () {

        priceconvertercost3();
        priceconvertercost2();
        priceconvertercost1();
    });

    function searchhome() {
        var code = $("#code").val();
        if (code.length == 9) {
            $("#showgharardad").empty();
            $('#showgharardad').load('/Gharardad/Showgharardad?code=' + code);
            $("#showgharardad").show();
        } else {
            alert("شماره قرارداد 9 عدد باشد");
        }
    }

</script>