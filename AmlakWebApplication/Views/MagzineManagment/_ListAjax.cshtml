@model List<DomainLayer.Magzine.Magazine>
@using Utilities.Calender
@{
    if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
    <tr>
        
        <td class="text-center" style="padding:10px;">
            @{
                if (item.Image!=null)
                {
                    <a href="~/images/@item.Image"><img style="width:40px;height:40px;" src="~/images/@item.Image" /></a>
                }
                else
                {
                    <a href="~/images/def.jpg"><img style="width:40px;height:40px;" src="~/images/def.jpg" /></a>
                }
            }

        </td>
        <td class="text-center" style="padding:10px;">
            @item.Title
        </td>
        <td class="text-center" style="padding:10px;">
            @item.MagazinGroup.Name
        </td>
        <td class="text-center" style="padding:10px;">
            @item.Tags
        </td>
        <td class="text-center" style="padding:10px;">
            @{ 
                string s=Calender.OnlyPersianDate(item.Date);
            }
            @s
        </td>
        <td class="text-center" style="padding:10px;"><p data-placement="top" data-toggle="tooltip" title="ویرایش"><a class="btn btn-primary btn-xs" onclick="Edititem(@item.Id)">ویرایش</a></p></td>
        <td class="text-center" style="padding:10px;"><p data-placement="top" data-toggle="tooltip" title="حذف"><a class="btn btn-danger btn-xs" onclick="deleteitem(@item.Id)"><i class="ion ion-ios-trash"></i></a></p></td>
    </tr>
        }

    }

}


