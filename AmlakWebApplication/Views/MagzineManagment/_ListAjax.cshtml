@model List<DomainLayer.Magzine>
@{
    if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
    <tr>
        <td class="text-center" style="padding:50px;">
            @{
                if (item.Is_Show == true)
                {
                    <input type="checkbox" checked="checked" onchange="Changecheckstatus(@item.Id)" />
                }
                else
                {
                    <input type="checkbox" onchange="Changecheckstatus(@item.Id)" />
                }
            }

        </td>
        <td class="text-center" style="padding:50px;">
            <a href="~/images/@item.Image"><img style="width:40px;height:40px;" src="~/images/@item.Image" /></a>
        </td>
        <td class="text-center" style="padding:50px;">
            @item.Title
        </td>
        <td class="text-center" style="padding:50px;">
            @item.MagzineType.Name
        </td>
        <td class="text-center" style="padding:50px;">
            @item.Tags
        </td>
        <td class="text-center" style="padding:50px;">
            @item.Date
        </td>
        <td class="text-center" style="padding:50px;"><p data-placement="top" data-toggle="tooltip" title="ویرایش"><a class="btn btn-primary btn-xs" onclick="Edititem(@item.Id)"><i class="ion ion-ios-edit"></i></a></p></td>
        <td class="text-center" style="padding:50px;"><p data-placement="top" data-toggle="tooltip" title="حذف"><a class="btn btn-danger btn-xs" onclick="deleteitem(@item.Id)"><i class="ion ion-ios-trash"></i></a></p></td>
    </tr>
        }

    }

}


