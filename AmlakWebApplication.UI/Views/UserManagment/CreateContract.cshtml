    function setgps(x, y, zoom) {
        
        map.setView([x, y], zoom);
        if (marker) {
            map.removeLayer(marker);
        }

        marker = new L.Marker([x, y], { icon: greenIcon });
        $('#gpsx').val(x);
        $('#gpsy').val(y);
        sendtoserver();
        marker.addTo(map);
    }

    function rezolotion(gps) {
        var gpsarray = gps.split(',');
        setgps(gpsarray[0], gpsarray[1], 12);
        $('#gpsx').val(gpsarray[0]);
        $('#gpsy').val(gpsarray[1]);
        sendtoserver();
    }
