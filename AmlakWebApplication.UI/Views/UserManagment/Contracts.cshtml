@model ViewModelLayer.User.UserMain

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
    <style>
        .zoom {
            padding: 20px;
            transition: transform .2s; /* Animation */
            margin: 0 auto;
            overflow: hidden;
        }

            .zoom:hover {
                transform: scale(1.1); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
            }

        .content {
            overflow: hidden;
            width: 100%;
            display: -webkit-box;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
        }

        .font-xs-b {
            font-size: 14px;
            line-height: 20px;
            font-weight: 700;
        }

        .font-xs-ad {
            color: #9c99b6;
            font-size: 14px;
            line-height: 20px;
            font-weight: 700;
        }

        option {
            color: black;
        }

        .districts-list-item {
            direction: rtl;
            width: 100%;
            background-color: #fdfdfd;
            max-width: 430px;
            border-radius: 4px;
            box-shadow: 0 0 5px rgba(0,0,0,.05);
            padding: .9rem 1.3rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 6px;
            cursor: pointer;
            transition: all .1s ease-in-out;
        }

            .districts-list-item:hover {
                box-shadow: 0 5px 5px rgba(88, 88, 88, 0.20);
            }

        .dropdown-item {
            font-family: sahel;
            display: inline-block;
        }

        .dropdown-menu {
            font-size: 1rem;
        }
    </style>

<div class="container">
    <h3 class="text-center" style="padding-top:50px;color:rgba(111, 109, 109, 0.65)">لیست املاک کاربر</h3>
    <a class="btn btn-success" style="margin-top:20px;color:white" href="/UserManagment/CreateContract?userid=@Model.User.Id">ثبت ملک جدید</a>
    
    <hr />
</div>

<div class="container" id="solditems">
